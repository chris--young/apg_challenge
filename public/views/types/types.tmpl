<div class="box">
  <div class="box-header">
    <span class="fa fa-server fa-fw fa-lg box-icon"></span>
    <h1>Types</h1>
  </div>
  <div id="types-content" class="box-content">

    <% if (types.length) { %>
      <h1>Malware Types</h1>
      <h2 id="types-page-loading" class="hidden">Loading...</h2>

      <div class="table-wrapper">
        <table id="malware-table" class="table table-bordered">
          <thead>
            <tr>
              <th>Classification Type</th>
              <th>Amount of Malware</th>
            </tr>
          </thead>
          <tbody>
            <% _.each(types, function (type) { %>
              <tr>
                <td><%- type.classificationType %></td>
                <td><%- type.malwares.length %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <div id="no-malwares-wrapper">
          <div id="no-malwares-vertical-align"></div>
          <div id="no-malwares" class="text-center">
            <h1>No malwares where found.</h1>
            <h2>Upload some on the <span>Upload</span> page and then come back.</h2>
          </div>
        </div>
      <% } %>
    </div>

  </div>
</div>

